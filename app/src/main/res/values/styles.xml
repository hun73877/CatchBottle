<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_background">
        <item name="android:backgroundTint">@color/brand_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_s</item>
        <item name="android:layout_marginRight">@dimen/spacing_s</item>
    </style>

    <style name="logo_full">
        <item name="android:src">@drawable/logo_full</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="logo_icon">
        <item name="android:src">@drawable/logo_icon</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <style name="logo_text">
        <item name="android:src">@drawable/logo_text</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="logo_text_small">
        <item name="android:src">@drawable/logo_text</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="cb_button_first">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cb_button_brand_first</item>
        <item name="android:textColor">@color/brand_light</item>
        <item name="android:textSize">@dimen/font_body_s</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
        <item name="android:paddingBottom">@dimen/spacing_s</item>
        <item name="android:paddingTop">@dimen/spacing_s</item>
    </style>

    <style name="cb_button_second" parent="@style/cb_button_first">
        <item name="android:backgroundTint">@color/gray_5</item>
        <item name="android:textColor">@color/brand_light</item>
    </style>

    <style name="cb_button_third" parent="@style/cb_button_first">
        <item name="android:backgroundTint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_5</item>
    </style>

    <style name="cb_input_first">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cb_input_first</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
        <item name="android:textSize">@dimen/font_input_place_holder</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:paddingLeft">@dimen/spacing_m</item>
        <item name="android:paddingRight">@dimen/spacing_m</item>
        <item name="android:paddingBottom">@dimen/spacing_m</item>
        <item name="android:paddingTop">@dimen/spacing_m</item>
    </style>

</resources>